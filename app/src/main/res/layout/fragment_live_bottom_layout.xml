<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:id="@+id/bottom_text_layout">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_one_text"
                android:text="2"
                android:textSize="17sp"
                android:textColor="#000"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textSize="16sp"
                android:textColor="#99000000"
                android:id="@+id/bottom_one_text"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_two_text"
                android:text="2"
                android:textSize="17sp"
                android:textColor="#000"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textSize="16sp"
                android:textColor="#99000000"
                android:id="@+id/bottom_two_text"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_three_text"
                android:text="2"
                android:textSize="17sp"
                android:textColor="#000"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周"
                android:textSize="16sp"
                android:textColor="#99000000"
                android:id="@+id/bottom_three_text"/>
    </LinearLayout>

</LinearLayout>